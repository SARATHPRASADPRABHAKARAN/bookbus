<script>
    function applyCoupon() {
        console.log('ividund')
        let coupon = $('#input-coupon').val()
        let user = $('#input-user').val()
        console.log("couponhere", coupon)
        $.ajax({
            url: '/verifyCoupon',
            method: 'POST',
            data: {
                coupon,
                user
            },
            success: (response) => {

                console.log('eeeeeeeeeee', response.status)
                if (response.status == 0) {

                    $('#success').show()
                    $('#used').hide()
                    $('#invalid').hide()
                    let totalAmount = document.getElementById('grandTotal').innerHTML

                    let discountPrice = totalAmount * (100 - response.offer) / 100
                    let discount=response.offer
                    document.getElementById('grandTotal').innerHTML = discountPrice
                    document.getElementById('total').value = discountPrice
                    document.getElementById('discount').innerHTML=discount


                    console.log('@@@@@@@@@@', discountPrice)
                }
                else if (response.status == 2) {
                    $('#used').show()
                    $('#success').hide()
                    $('#invalid').hide()
                }
                else if (response.status == 1) {
                    $('#invalid').show()
                    $('#used').hide()
                    $('#success').hide()
                }

            }
        })
    }
</script>