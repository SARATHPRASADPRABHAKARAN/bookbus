<div class="content-wrapper">
  <section class="content-header">

    <form class="tm-edit-product-form" method="POST" action="/new-coupon">







      <div class="form-group mb-3">
        <label for="price">Discount percentage (in %)
        </label>
        <input id="offer" name="offer" type="number" class="form-control validate" required="">
      </div>


      <div class="col-12">
        <button class="btn btn-success" id="button">generate coupon code</button>
      </div>


      <div class="form-group mb-3">
        <label for="price">Discount percentage (in %)
        </label>
        <input id="coupon" name="coupon" type="text" class="form-control validate" required="">
      </div>








      <div class="col-12">
        <button type="submit" id="submit" class="btn btn-primary btn-block text-uppercase">Generate Coupon Now</button>
      </div>


    </form>
  </section>
</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
$('#button').click((e)=>{
    e.preventDefault()
$.ajax({
    method:'get',
    url:'/generate-couponCode',
        
    success:(response)=>{
        
        
        $('#coupon').val(response)
    }
})
})
</script>